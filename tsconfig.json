{
    "compilerOptions": {
      "module": "ES2015",
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "lib": ["ES2015", "dom"],
      "baseUrl": ".",
      "paths": { "*": ["src/types/*"]}
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ],
}